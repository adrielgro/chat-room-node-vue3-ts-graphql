{
  "root": true,
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "object-curly-spacing": ["error", "always"],
    "no-unused-vars": "off"
  },
  "env": {
    "node": true
  },
  "ignorePatterns": ["src/**/*.test.ts", "build/**/*"]
}
